.annotation
    position absolute
    width 380px
    height 320px
    user-select none
    -webkit-transform translate(0px, 0px)
    transform translate(0px, 0px)
    padding 20px
    z-index 10
    background cyan
    &-container
        position absolute
        height 100%
        width 100%
        z-index 1
        background rgba(0,0,0,0.4)
    &-header
        width 100%
        height 100px
        display flex
        justify-content space-around
        align-items center
        position relative
    &-body
        width 100%
        height 100%
        canvas
            height 100%
            width 100%
    &-drag
        position absolute
        left 150px
        top 70px
        height 70px
        width 70px
        border-radius 70px
        background #F1F4F4
        opacity 0.9
        box-shadow 0 2px 4px 0 rgba(0,0,0,0.17)
        i, .fas, .material-icons
            opacity 0.6